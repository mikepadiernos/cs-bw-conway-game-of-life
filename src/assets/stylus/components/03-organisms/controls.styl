.controls
	grid-column 1/2
	grid-row 2/3
	button
		display flex
		align-items center
		justify-content flex-start
		padding 1em
		height 3.5em
		width 3.5em
		overflow hidden
		i
			height 1em
			width 1em
			margin-right 1.5em
			&:before
				display block
				font-size 1em
				height 1em
				width 1em
